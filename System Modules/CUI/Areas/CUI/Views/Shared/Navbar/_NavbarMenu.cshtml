@using CloudCore.Web.Core.Security.Authentication

<div id="navbar-collapse" class="collapse navbar-collapse">
    <ul class="nav navbar-nav">

        <li>
            <a href="#" class="menu-item-active">
                <span class="glyphicon glyphicon-menu-hamburger"></span>                
            </a>
        </li>
        <li>
            <a href="@Url.Action("Dashboard", "Main", new { area = "CUI" })">
                <span class="glyphicon glyphicon-dashboard hidden-lg"></span>
                DASHBOARD
            </a>
        </li>
        <li>
            <a href="@Url.Action("Standard", "Tasklist" , new { area = "CUI" })">
                <span class="glyphicon glyphicon-list hidden-lg"></span>
                TASKS
            </a>
        </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("UpdatePersonalDetails", "Tools", new { area = "CUI", id = CloudCoreIdentity.UserId })" style="color: #fff">
                <span class="glyphicon glyphicon-user"></span>
                @CloudCoreIdentity.Fullname
            </a>
        </li>

        <li class="dropdown message-area" onclick="removeBlinkIfFound(this)">
            @Html.Partial("~/Areas/CUI/Views/Shared/Navbar/_UserNotificationPanel.cshtml", new UserNotificationSideBarModel())
        </li>

        <li>
            <a href="@Url.Action("Index", "Tools", new { area = "CUI" })">
                <span class="glyphicon glyphicon-cog"></span>
                <span class="hidden-lg">
                    SETTINGS
                </span>
            </a>
        </li>
        <li>
            <a href="@Url.Action("SignOut", "Login", new { area = "CUI" })">
                <span class="glyphicon glyphicon-log-out"></span>
                <span class="hidden-lg">
                    LOGOUT
                </span>
            </a>
        </li>
    </ul>
</div>
<script type="text/javascript">
    function removeBlinkIfFound(element) {
        $(element).removeClass("blink");
    }
</script>