@using System.Web.Optimization
@inherits CloudCore.Web.Core.BaseViews.WebView<CloudCore.Web.Models.ChangePasswordModel>

@section Assets
{
    @Scripts.Render("~/bundles/PasswordStrengthLibrary")
}

@using (Html.BeginForm())
{ 
    using(FormLayout.BeginTable())
    {        
        @FormLayout.AddPasswordRowFor(m => m.OldPassword)
        @FormLayout.AddPasswordStrengthRowFor(m => m.NewPassword, "changePassword")
        @FormLayout.AddPasswordRowFor(m => m.ConfirmPassword)
    }
    FormLayout.AddSubmitButtonWithBar("Change Password", "changePassword");    
}
