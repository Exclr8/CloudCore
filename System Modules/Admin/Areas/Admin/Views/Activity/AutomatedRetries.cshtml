@inherits CloudCore.Web.Core.BaseViews.WebView<CloudCore.Admin.Models.ActivityAutomatedRetriesModel>

@{
    ViewBag.Title = "Automated Retries";
}

@using (Html.BeginForm())
{
    using (FormLayout.BeginTable())
    {
    @FormLayout.AddTitleHeaderRow("Worker Retry Information")
    @FormLayout.AddTextboxRowFor(model => model.MaxRetries)
    @FormLayout.AddTextboxRowFor(model => model.RetryDelayInSeconds)
    }

    @Html.HiddenFor(model => model.ActivityId)

    FormLayout.AddSubmitButtonWithBar("Save");
}