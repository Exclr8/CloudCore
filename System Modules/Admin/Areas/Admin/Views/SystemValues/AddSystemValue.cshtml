@inherits CloudCore.Web.Core.BaseViews.WebView<CloudCore.Admin.Models.SystemValueCreateModel>
@{
    ViewBag.Title = "Add System Value";
}

@using (Html.BeginForm())
{
    
    using (FormLayout.BeginTable())
    {
        @FormLayout.AddTitleHeaderRow("System Value Details")
        @FormLayout.AddTextboxRowFor(model => model.ValueName)
        @FormLayout.AddTextboxRowFor(model => model.ValueData)
        @FormLayout.AddTextAreaFor(model => model.ValueDescription,5,30)
    }
    FormLayout.AddSubmitButtonWithBar("Save");
   

}