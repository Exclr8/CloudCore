@using CloudCore.Web.Core.BaseViews;
@using CloudCore.Admin.Models;
@using System.Web.Mvc.Html;
@using CloudCore.Web.Core.Razor.Extensions;

@inherits WebView<UserContextModel>
@{
    ViewBag.Title = "Request Password Reset";
}       

@using (Html.BeginForm())
{ 
    using(FormLayout.BeginTable())
    {
        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m => m.Login)
        @Html.HiddenFor(m => m.Email)
        @FormLayout.AddStaticTextRow("Are you sure you want to request that this user resets his/her password?"); 
    }
    FormLayout.AddSubmitButtonWithBar("Reset Password");    
}