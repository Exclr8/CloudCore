<script type="text/javascript">
    function htmlEncode(value) {
        return $('<div/>').text(value).html();
    }

    function UpdateUserLookupValues(userId, fullName) {
        var encodedFullName = htmlEncode(fullName);
        $("#ManagerUserId").val(userId);
        $("#ManagerName").val(encodedFullName);
    }
</script>


